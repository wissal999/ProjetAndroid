<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recycler_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
<TextView

    android:text="@string/tv_mode"
    style="@style/style_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:id="@+id/recycler_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <TextView
        android:text="@string/tv_parfums_maquillages"
        style="@style/style_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:id="@+id/recycler_listeMaquillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
        <TextView

            android:text="Bébé &amp; Jouets"
            style="@style/style_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="1dp"
            android:id="@+id/recycler_listebebe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    <TextView
        android:text="Superette"
        style="@style/style_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:id="@+id/recycler_listeSuperette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
</LinearLayout>
</ScrollView>